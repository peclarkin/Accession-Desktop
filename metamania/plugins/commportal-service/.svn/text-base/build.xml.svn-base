<?xml version="1.0" encoding="UTF-8"?>

<project default="make" name="commportal-service">

    <!-- import the abstract plugin build.xml -->
    <import file="../abstract-plugin-build.xml"/>

    <!--BUNDLES -->
    <target name="plugin-bundles" depends="bundle-commportal-service"/>

    <!-- bundle-commportal-service -->
    <target name="bundle-commportal-service">
        <jar compress="false"
             destfile="${release}/commportal-service.jar"
             manifest="src/net/java/sip/communicator/impl/commportal/commportal.manifest.mf">
            <zipfileset dir="classes/net/java/sip/communicator/impl/commportal"
                        prefix="net/java/sip/communicator/impl/commportal"/>
            <zipfileset dir="classes/net/java/sip/communicator/service/commportal"
                        prefix="net/java/sip/communicator/service/commportal" />
        </jar>
    </target>
</project>
