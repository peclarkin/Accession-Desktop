<?xml version="1.0" encoding="UTF-8"?>

<project default="make" name="googlehangout">

    <!-- import the abstract plugin build.xml -->
    <import file="../abstract-plugin-build.xml"/>

    <!--BUNDLES -->
    <target name="plugin-bundles" depends="bundle-googlehangout"/>

    <!-- bundle-cdap -->
    <target name="bundle-googlehangout">
        <jar compress="false"
             destfile="${release}/googlehangout.jar"
             manifest="src/net/java/sip/communicator/plugin/googlehangout/googlehangout.manifest.mf">
            <zipfileset dir="classes/net/java/sip/communicator/plugin/googlehangout"
                        prefix="net/java/sip/communicator/plugin/googlehangout"/>
        </jar>
    </target>
</project>
