<project default="make" name="EmptyPlugin">

    <!-- import the abstract plugin build.xml -->
    <import file="../abstract-plugin-build.xml"/>

    <!--BUNDLES -->
    <target name="plugin-bundles" depends="bundle-emptyplugin"/>

    <!-- bundle-emptyplugin -->
    <target name="bundle-emptyplugin">
        <jar compress="false" destfile="${release}/emptyplugin.jar"
           manifest="src/org/jitsi/plugin/example/example.manifest.mf">
           <zipfileset dir="classes/org/jitsi/plugin/example"
               prefix="org/jitsi/plugin/example" />
       </jar>
    </target>
</project>
